<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
        android:id="@+id/relative_layout">
     
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/label"
        android:textSize="@dimen/list_item_layout_textview_text_size"
		android:gravity="center_vertical"
		android:textColor="@android:color/white"
		 android:layout_marginTop="@dimen/list_item_layout_relative_layout_margin_top" 
        android:layout_marginBottom="@dimen/list_item_layout_relative_layout_margin_bottom" >
    </TextView>

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
		android:background="@android:color/white"
		android:focusable="false"
		 android:layout_marginTop="@dimen/list_item_layout_relative_layout_margin_top" 
        android:layout_marginBottom="@dimen/list_item_layout_relative_layout_margin_bottom" >
    </CheckBox>

</RelativeLayout>
    
